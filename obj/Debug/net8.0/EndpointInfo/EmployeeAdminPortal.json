          },
          "productName": {
            "type": "string",
            "nullable": true
          },
          "productSku": {
            "type": "string",
            "nullable": true
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          },
          "unitPrice": {
            "type": "number",
            "format": "double"
