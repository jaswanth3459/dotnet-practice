        "type": "integer",
        "format": "int32"
      },
      "PaymentMethod": {
        "enum": [
          0,
          1,
          2,
          3,
          4
        ],
        "type": "integer",
        "format": "int32"
      },
      "PaymentStatus": {
        "enum": [
          0,
